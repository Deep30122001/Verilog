module top_module (
    input ring,
    input vibrate_mode,
    output ringer,       // Make sound
    output motor         // Vibrate
);
    always@(*)begin
        ringer=0;
        motor=0;
        if(ring)begin
            if(vibrate_mode)
                 motor=1;
               
            else
                 ringer=1;
        end
    end
            

endmodule
